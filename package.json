{
  "name": "todo",
  "version": "1.0.1",
  "description": "It is a simple todo list test PR",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev:server": "nodemon",
    "dev:server:run": "ts-node src/index.ts",
    "db:migrate": "ts-node ./node_modules/.bin/typeorm migration:run",
    "db:revert": "  ts-node ./node_modules/.bin/typeorm migration:revert",
    "db:reboot": "npm run db:revert && npm run db:migrate",
    "build": "rimraf dist && tsc && npm run db:migrate",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"src/**/*.{ts,js}\" \"client/**/*.{ts,js}\" --fix --format stylish --color",
    "lint:css": "stylelint \"client/**/*.scss\" --fix",
    "test": "jest",
    "coverage": "jest --coverage",
    "windows:db:migrate": "ts-node node_modules\\typeorm\\cli.js migration:run",
    "windows:db:revert": "ts-node node_modules\\typeorm\\cli.js migration:revert",
    "windows:db:reboot": "npm run windows:db:revert && npm run windows:db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rammfall/todo.git"
  },
  "keywords": [
    "todolist"
  ],
  "author": "Bohdan Onatskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rammfall/todo/issues"
  },
  "homepage": "https://github.com/Rammfall/todo#readme",
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.12",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.7.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-typescript": "^6.3.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.1.0",
    "jest": "^25.1.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.14.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/helmet": "0.0.45",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^12.0.1",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.14.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.21",
    "uuid": "^3.3.3",
    "validator": "^12.1.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "src/db/migration"
  ]
}
